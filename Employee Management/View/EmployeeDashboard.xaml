<Window x:Class="Employee_Management.View.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Employee Dashboard" Height="800" Width="900" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="Auto"/>
            <!-- Notification -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Height="70" Padding="10">
            <TextBlock Text="Bảng điều khiển nhân viên" FontSize="26" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar (Ảnh đại diện và các nút chức năng) -->
            <StackPanel Grid.Column="0" Width="220" Margin="0,0,20,0">
                <!-- Ảnh đại diện -->
                <Border BorderBrush="#2C3E50" BorderThickness="2" CornerRadius="10" Padding="5" Background="White">
                    <Image x:Name="imgAvatar" Width="180" Height="180" Stretch="Uniform" Cursor="Hand" 
                       Source="{Binding AvatarImage}"/>
                </Border>

                <!-- Nút chức năng -->
                <Button Content="Chỉnh sửa thông tin" Width="200" Height="40" Margin="0,20,0,10" 
                    Background="#3498DB" Foreground="White" FontWeight="Bold" FontSize="14" 
                    Command="{Binding EditProfileCommand}" Cursor="Hand"/>
                <Button Content="Xin nghỉ phép" Width="200" Height="40" Margin="0,10,0,10" 
                    Background="#1ABC9C" Foreground="White" FontWeight="Bold" FontSize="14" 
                    Command="{Binding RequestLeaveCommand}" Cursor="Hand"/>

                <!-- Nút Log Out -->
                <Button Content="Log Out" 
                Width="200" 
                Height="40" 
                Margin="0,10,0,0" 
                Background="#E74C3C" 
                Foreground="White" 
                FontWeight="Bold" 
                FontSize="14" 
                Command="{Binding LogOutCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>

            <!-- Thông tin cá nhân và Check-in/Check-out -->
            <StackPanel Grid.Column="1">
                <!-- Thông tin cá nhân -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Thông tin cá nhân" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="Họ và tên:" FontSize="16" FontWeight="SemiBold" Width="120" Foreground="#34495E"/>
                            <TextBlock Text="{Binding FullName}" FontSize="16" Foreground="#2C3E50"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="Chức vụ:" FontSize="16" FontWeight="SemiBold" Width="120" Foreground="#34495E"/>
                            <TextBlock Text="{Binding Position}" FontSize="16" Foreground="#2C3E50"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="Phòng ban:" FontSize="16" FontWeight="SemiBold" Width="120" Foreground="#34495E"/>
                            <TextBlock Text="{Binding Department}" FontSize="16" Foreground="#2C3E50"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Check-in/Check-out -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Chấm công" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                        <Button Content="Check-in" Width="150" Height="40" Background="#1ABC9C" Foreground="White" 
                            FontWeight="Bold" Command="{Binding CheckInCommand}" Cursor="Hand"/>
                        <Button Content="Check-out" Width="150" Height="40" Margin="0,10,0,0" Background="#E74C3C" 
                            Foreground="White" FontWeight="Bold" Command="{Binding CheckOutCommand}" Cursor="Hand"/>
                        <TextBlock Text="{Binding CheckInTime}" FontSize="14" Margin="0,10,0,5" Foreground="#2C3E50"/>
                        <TextBlock Text="{Binding CheckOutTime}" FontSize="14" Margin="0,5,0,5" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Khoảng hiển thị thông báo -->
        <Border Grid.Row="2" Background="#ECF0F1" CornerRadius="10" Padding="10" Margin="20" VerticalAlignment="Bottom">
            <ListBox ItemsSource="{Binding Notifications}" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="{Binding Content}" FontSize="14" Foreground="#34495E"/>
                            <TextBlock Text="{Binding SentDate, StringFormat='dd/MM/yyyy HH:mm'}" FontSize="12" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        
        <Border Grid.Row="2" Background="#ECF0F1" CornerRadius="10" Padding="10" Margin="20" VerticalAlignment="Bottom">
    <ListBox ItemsSource="{Binding Notifications}" Background="Transparent" BorderThickness="0">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="{Binding Content}" FontSize="14" Foreground="#34495E"/>
                    <TextBlock Text="{Binding SentDate, StringFormat='dd/MM/yyyy HH:mm'}" FontSize="12" Foreground="#7F8C8D"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Border>
    </Grid>
</Window>