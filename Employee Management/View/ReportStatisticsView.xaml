<Window x:Class="Employee_Management.View.ReportStatisticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báo cáo và Thống kê" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2C3E50">

    <Grid>
        <!-- Border chứa nội dung chính -->
        <Border Background="#34495E" CornerRadius="10" BorderBrush="#1ABC9C" BorderThickness="2"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="Báo cáo và Thống kê"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="10"/>

                <!-- Nội dung chính -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Nút Báo cáo thống kê nhân viên -->
                    <Button Command="{Binding EmployeeReportCommand}"
                            Width="300"
                            Height="50"
                            Background="#3498DB"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE77B;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="20" 
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Báo cáo thống kê nhân viên"/>
                        </StackPanel>
                    </Button>

                    <!-- Nút Báo cáo thống kê lương -->
                    <Button Command="{Binding SalaryReportCommand}"
                            Width="300"
                            Height="50"
                            Background="#2ECC71"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE8D0;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="20" 
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Báo cáo thống kê lương"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <TextBlock Text="Quản lý báo cáo - Hệ thống quản lý nhân sự"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="12"
                   Margin="10"
                   VerticalAlignment="Bottom"/>
    </Grid>

    <!-- Hiệu ứng bóng đổ -->
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="3"
                                      Color="#40000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>