<Window x:Class="Employee_Management.View.UpdateSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cập nhật lương thưởng" Height="650" Width="700" WindowStartupLocation="CenterScreen"
        Background="#2C3E50">

    <Grid>
        <!-- Border chứa form cập nhật lương thưởng -->
        <Border Background="#34495E" CornerRadius="15" BorderBrush="#1ABC9C" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Padding="20">
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="Cập nhật lương thưởng" FontSize="24" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Base Salary -->
                <TextBlock Text="Lương cơ bản:" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,5"/>
                <TextBox x:Name="txtBaseSalary" Height="35" FontSize="14" Padding="5" 
                         Background="#ECF0F1" BorderBrush="#1ABC9C" BorderThickness="1"
                         Text="{Binding BaseSalary, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}"/>

                <!-- Allowance -->
                <TextBlock Text="Phụ cấp:" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="txtAllowance" Height="35" FontSize="14" Padding="5" 
                         Background="#ECF0F1" BorderBrush="#1ABC9C" BorderThickness="1"
                         Text="{Binding Allowance, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}"/>

                <!-- Bonus -->
                <TextBlock Text="Thưởng:" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="txtBonus" Height="35" FontSize="14" Padding="5" 
                         Background="#ECF0F1" BorderBrush="#1ABC9C" BorderThickness="1"
                         Text="{Binding Bonus, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}"/>

                <!-- Deduction -->
                <TextBlock Text="Khấu trừ:" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="txtDeduction" Height="35" FontSize="14" Padding="5" 
                         Background="#ECF0F1" BorderBrush="#1ABC9C" BorderThickness="1"
                         Text="{Binding Deduction, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}"/>

                <!-- Salary Status -->
                <TextBlock Text="Trạng thái lương:" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,5"/>
                <ComboBox x:Name="cbSalaryStatus" Height="35" FontSize="14" Padding="5" 
                          Background="#ECF0F1" BorderBrush="#1ABC9C" BorderThickness="1"
                          ItemsSource="{Binding SalaryStatuses}"
                          SelectedItem="{Binding SelectedSalaryStatus, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Total Salary (Read-only) -->
                <TextBlock Text="Tổng lương:" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="txtTotalSalary" Height="35" FontSize="14" Padding="5" 
                         Background="#ECF0F1" BorderBrush="#1ABC9C" BorderThickness="1"
                         Text="{Binding TotalSalary,Mode=OneWay, StringFormat='N2'}"
                         IsReadOnly="True"/>

                <!-- Nút Update và Cancel -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Lưu" Width="100" Height="35" Background="#1ABC9C" 
                            Foreground="White" FontWeight="Bold" BorderBrush="Transparent" 
                            Cursor="Hand" Margin="0,0,10,0"
                            Command="{Binding UpdateSalaryCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <Button Content="Huỷ" Width="100" Height="35" Background="#E74C3C" 
                            Foreground="White" FontWeight="Bold" BorderBrush="Transparent" 
                            Cursor="Hand" Margin="10,0,0,0"
                            Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>